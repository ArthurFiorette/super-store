datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

generator client {
  provider = "prisma-client-js"
}

model InventoryItem {
  id             Int     @id @default(autoincrement())
  marketHashName String?
  marketName     String?
  name           String?
  appId          Int
  storeId        String?
}

